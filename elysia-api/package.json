{
  "name": "elysia-api",
  "type": "module",
  "scripts": {
    "build": "bun build src/index.ts --outdir ./dist --target bun",
    "dev": "bun --hot src/index.ts",
    "start": "bun src/index.ts",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:reset": "bun run src/scripts/reset-db.ts",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "bun run src/scripts/seed.ts",
    "format": "prettier --write .",
    "check": "prettier --check .",
    "email": "email dev --dir src/emails --port 4100"
  },
  "dependencies": {
    "@elysiajs/cors": "^1.4.1",
    "@paralleldrive/cuid2": "^3.0.6",
    "@react-email/components": "^1.0.4",
    "better-auth": "^1.4.12",
    "drizzle-orm": "^0.45.1",
    "drizzle-typebox": "^0.3.3",
    "elysia": "^1.0.0",
    "nodemailer": "^7.0.12",
    "pino": "^10.1.1",
    "postgres": "^3.4.8",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "@elysiajs/openapi": "^1.4.13",
    "@react-email/preview-server": "5.2.1",
    "@sinclair/typebox": "^0.34.47",
    "@trivago/prettier-plugin-sort-imports": "^6.0.2",
    "@types/bun": "^1.3.5",
    "@types/node": "^22.13.14",
    "@types/nodemailer": "^7.0.5",
    "@types/pg": "^8.16.0",
    "@types/react": "^19.2.8",
    "@types/react-dom": "^19.2.3",
    "drizzle-kit": "^0.30.6",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.7.4",
    "react-email": "^5.2.1"
  }
}
